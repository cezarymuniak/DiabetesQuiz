<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/click_on_the_heart_and_submit_the_answers"
            android:textColor="#D50000"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/submit_answers"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="110dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/love"
            android:onClick="submitAnswers"
            android:scaleType="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/submit_answers"
            android:scaleType="fitCenter"
            android:scaleX=".5"
            android:scaleY=".5"
            android:src="@drawable/diabetes6" />
    </RelativeLayout>
</android.support.v7.widget.ContentFrameLayout>